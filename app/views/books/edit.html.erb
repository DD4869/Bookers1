<h1>Editing Book</h1>

<% if @book.errors.any? %>
    <%= @book.errors.count %> <%= 'error'.pluralize(@book.errors.count) %> prohibited this book from being saved
    <ul>
        <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
<% end %>

<%= form_with model: @book do |f| %>

  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Update Book' %>
  </div>

  <%= link_to 'Show', book_path(@book.id), class: "show_#{@book.id}" %>
  |
  <a class="back" href="/books">Back</a>

<% end %>
